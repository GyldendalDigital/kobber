{
  "name": "kobber",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "internal/*",
    "packages/*"
  ],
  "scripts": {
    "clean": "turbo clean && rm -rf .turbo node_modules",
    "lint": "turbo lint lint:root --continue",
    "lint:root": "biome ci",
    "test": "turbo test",
    "dev": "turbo dev",
    "build": "turbo build",
    "tokens": "turbo tokens",
    "storybook": "turbo storybook",
    "css": "turbo css",
    "publish-packages": "turbo run build lint && changeset version && changeset publish",
    "integration-checker": "turbo clone-repos && turbo create-ts-refs && turbo create-csv"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@changesets/cli": "^2.28.1",
    "@storybook/addon-a11y": "^9.1.6",
    "@storybook/addon-docs": "^9.1.6",
    "@storybook/builder-vite": "^9.1.6",
    "@storybook/web-components-vite": "^9.1.6",
    "@types/node": "^24.3.0",
    "storybook": "^9.1.6",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-order": "^7.0.0",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "vite": "^7.1.5"
  },
  "packageManager": "yarn@4.10.3",
  "engines": {
    "node": ">=22.17.0"
  },
  "dependencies": {
    "@types/babel-generator": "^6.25.8"
  }
}
