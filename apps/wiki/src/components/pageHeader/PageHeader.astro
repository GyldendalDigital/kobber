---
import Navigation from "../navigation/Navigation.astro";
---

<header>
  <img
    class="ds-gyldendal-logo"
    src="/gyldendal_frontpage_logo.svg"
    alt="Gyldendal logo"
  />
  <Navigation />
  <slot />
</header>

<style>
  header {
    background-color: var(--kobber-primitives-color-gray-100);
  }

  .ds-gyldendal-logo {
    position: absolute;
    top: var(--kobber-primitives-size-18);
    left: var(--kobber-primitives-size-18);
    height: var(--kobber-primitives-size-24);
  }
</style>
