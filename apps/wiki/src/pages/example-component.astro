---
import "@gyldendal/kobber-components/css/components.css";
import * as tokens from "@gyldendal/kobber-base/themes/default/tokens";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Test">

  <!-- Client side rendered react component -->

  <div id="react-root"></div>

  <br />

  <script>
    import { Example } from "@gyldendal/kobber-components/react";
    import * as tokens from "@gyldendal/kobber-base/themes/default/tokens";
    import { createElement } from "react";
    import { createRoot } from "react-dom/client";
    const element = document.getElementById("react-root");
    if (element) {
      const root = createRoot(element);
      const componentWithoutJsx = createElement(
        Example,
        {
          message: "Client side rendered react component",
          backgroundColor: tokens.primitives.color.orange[100],
        },
        null
      );
      root.render(componentWithoutJsx);
    }
  </script>

  <!-- Web component using custom element -->

  <script>
    import "@gyldendal/kobber-components/web-components";
  </script>

  <kobber-example
    message="Web component using custom element"
    background-color={tokens.primitives.color.purple[100]}></kobber-example>

  <br />

  <!-- Scripted Web component -->

  <div id="web-component-container"></div>

  <script>
    import { Example } from "@gyldendal/kobber-components/web-components";
    import * as tokens from "@gyldendal/kobber-base/themes/default/tokens";
    const example = new Example();
    example.backgroundColor = tokens.primitives.color.turquoise[100];
    example.message = "Scripted Web component";
    document.querySelector("#web-component-container")?.appendChild(example);
  </script>
</Layout>
