---
import * as typographyStyles from "@gyldendal/kobber-base/themes/default/typography.module.css";
import { Borders } from "../components/borders/Borders";
import Colors from "../components/colors/Colors.astro";
import { Elevation } from "../components/elevation/Elevation";
import PageHeader from "../components/pageHeader/PageHeader.astro";
import { Sizes } from "../components/sizes/Sizes";
import { Typography } from "../components/typography/Typography";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <PageHeader>
    <h1 class:list={[typographyStyles.headingXxxl, "ds-heading"]}>Kobber</h1>
  </PageHeader>
  <Colors />
  <Typography client:idle />
  <Sizes client:idle />
  <Borders client:idle />
  <Elevation client:idle />
</Layout>

<style>
  .ds-heading {
    text-align: center;
    margin: 0;
    padding: var(--kobber-primitives-size-8) 0;
  }

  .submit-button {
    background-color: var(--kobber-component-button-color-background);
    border-radius: var(--kobber-semantic-action-border-radius-pill);
    padding: var(--kobber-component-button-padding-block)
      var(--kobber-component-button-padding-inline);
    vertical-align: 5px;
    margin-left: 5px;
  }

  .status {
    text-align: center;
    margin-top: var(--kobber-primitives-size-18);
  }
</style>
