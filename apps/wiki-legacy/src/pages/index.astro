---
import "@fontsource/fira-code";
import { getTheme } from "../theme";
import "../styles/global.css";
import { Borders } from "../components/designTokens/borders/Borders";
import Colors from "../components/designTokens/colors/Colors.astro";
import FluidDiagram from "../components/designTokens/fluidDiagram/FluidDiagram.astro";
import { Elevation } from "../components/designTokens/elevation/Elevation";
import { Sizes } from "../components/designTokens/sizes/Sizes";
import * as defaultTokens from "@gyldendal/kobber-base/themes/default/tokens";

interface Props {
  title?: string;
}

const { title } = Astro.props;

const titleWithSuffix = title ? `${title} - Kobber - Gyldendals designsystem` : "Kobber - Gyldendals designsystem";

const theme = getTheme(Astro);
---

<!doctype html>
<html lang="no">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="alternate icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{titleWithSuffix}</title>
  </head>

  <Sizes />
  <FluidDiagram tokenName="layout.gap" fluidTokens={defaultTokens.layout.gap} />
  <Elevation />
  <Colors />
  <Borders />

  <!-- OpenGraph Tags -->
  <meta property="og:title" content={titleWithSuffix} />
  <meta property="og:site_name" content="Kobber" />
  <meta property="og:locale" content="no" />
  <meta
    property="og:description"
    name="description"
    content="Byggesteiner Gyldendal bruker til Ã¥ lage solide, sammenhengende og universelt tilgjengelige produkter."
  />

  <script type="module">
    import RefreshRuntime from "/@react-refresh";
    RefreshRuntime.injectIntoGlobalHook(window);
    window.$RefreshReg$ = () => {};
    window.$RefreshSig$ = () => type => type;
    window.__vite_plugin_react_preamble_installed__ = true;
  </script>

  <body class:list={theme.className}>
    <style>
      .commingsoon {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        font-size: 30px;
        padding: 50px;
      }
    </style>
  </body>


</html>
