{
  "name": "@gyldendal/kobber-base",
  "version": "0.6.12",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    "./themes/*.js": "./dist/themes/*.js",
    "./themes/default/*.js": "./dist/themes/default/*.js",
    "./themes/default/*.ts": "./dist/themes/default/*.ts",
    "./themes/default/*.css": "./dist/themes/default/*.css",
    "./themes/dark/*.js": "./dist/themes/dark/*.js",
    "./themes/dark/*.ts": "./dist/themes/dark/*.ts",
    "./themes/dark/*.css": "./dist/themes/dark/*.css",
    "./utilities/index.js": "./dist/utilities/index.js"
  },
  "scripts": {
    "clean": "rm -rf .turbo node_modules dist",
    "build": "tsup && tsx ./build.ts",
    "lint": "echo TSC && tsc --noEmit",
    "test": "tsx ./tests",
    "prepare": "npm run build",
    "create-ts-refs": "create-ts-refs --sourceMap=entries.ts --out=.references.mts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GyldendalDigital/kobber"
  },
  "devDependencies": {
    "@internal/integration-checker": "workspace:^",
    "style-dictionary": "^5.1.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
