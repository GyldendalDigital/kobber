{
  "name": "@gyldendal/kobber-components",
  "version": "0.6.4",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist/**/*"
  ],
  "exports": {
    "./react": "./dist/react/index.js",
    "./web-components": "./dist/web-components/index.js",
    "./css/*.css": "./dist/css/*.css",
    "./init": "./dist/init/index.js"
  },
  "scripts": {
    "clean": "rm -rf .turbo node_modules dist",
    "lint": "yarn lint:js",
    "lint:css": "stylelint",
    "lint:js": "echo \"No JS linting configured\"",
    "typedoc": "npx typedoc --entryPointStrategy expand './src/base/utilities/**/*.ts' --skipErrorChecking --excludeNotDocumented --plugin typedoc-plugin-markdown --plugin typedoc-github-wiki-theme --hidePageTitle true",
    "build": "tsx ./build-scripts/list-css-components.ts && tsup",
    "prepare": "npm run build",
    "dev": "onchange \"./src/**/*.{ts,tsx,css}\" -- npm run build",
    "test": "web-test-runner"
  },
  "dependencies": {
    "@gyldendal/kobber-base": "0.6.4",
    "@gyldendal/kobber-icons": "0.6.4",
    "@lit-labs/observers": "^2.0.5",
    "@lit-labs/ssr-dom-shim": "^1.3.0",
    "@shoelace-style/localize": "^3.1.2",
    "lit": "^3.2.1",
    "stylis": "^4.3.0"
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@gyldendal/kobber-stylelint": "0.6.4",
    "@gyldendal/kobber-tsconfig": "0.6.4",
    "@lit/react": "^1.0.7",
    "@shoelace-style/shoelace": "^2.14.0",
    "@types/mocha": "^10.0.10",
    "@types/react": "^19.1.0",
    "@types/stylis": "^4.2.7",
    "@web/dev-server-esbuild": "^1.0.4",
    "@web/test-runner": "^0.18.1",
    "@web/test-runner-playwright": "^0.11.0",
    "onchange": "^7.1.0",
    "react": "^19.1.0",
    "stylelint": "^16.0.2",
    "stylelint-config-standard": "^35.0.0",
    "stylelint-order": "^6.0.4",
    "tsup": "^8.4.0",
    "tsx": "^4.19.2",
    "typedoc": "^0.28.10",
    "typedoc-github-wiki-theme": "^2.1.0",
    "typedoc-plugin-markdown": "^4.8.1",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "@lit/react": ">=1",
    "@shoelace-style/shoelace": ">=2",
    "@web/test-runner-playwright": ">=0.11",
    "react": ">=18"
  },
  "peerDependenciesMeta": {
    "@lit/react": {
      "optional": true
    },
    "@shoelace-style/shoelace": {
      "optional": true
    },
    "@web/test-runner-playwright": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GyldendalDigital/kobber"
  }
}
