{
  "name": "@gyldendal/kobber-components",
  "version": "0.4.4",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist/**/*"
  ],
  "exports": {
    "./react": "./dist/react/index.js",
    "./react-ssr-safe": "./dist/react-ssr-safe/index.js",
    "./web-components": "./dist/web-components/index.js",
    "./vanilla": [
      "./dist/vanilla/index.js"
    ],
    "./vanilla/*.css": [
      "./dist/vanilla/*.css"
    ]
  },
  "scripts": {
    "clean": "rm -rf .turbo node_modules dist",
    "lint": "yarn lint:js",
    "lint:css": "stylelint",
    "lint:js": "eslint ./src/**/*.{ts,tsx} --max-warnings 10",
    "typedoc": "npx typedoc --entryPointStrategy expand './src/utils/**/*.ts' --skipErrorChecking --excludeNotDocumented --plugin typedoc-plugin-markdown --plugin typedoc-github-wiki-theme --hidePageTitle true",
    "build": "tsup",
    "prepare": "npm run build",
    "dev": "onchange \"./src/**/*.{ts,tsx,css}\" -- npm run build",
    "test": "web-test-runner"
  },
  "dependencies": {
    "@gyldendal/kobber-base": "0.4.4",
    "@gyldendal/kobber-icons": "0.4.4",
    "@lit-labs/observers": "^2.0.5",
    "@shoelace-style/localize": "^3.1.2",
    "lit": "^3.2.1",
    "stylis": "^4.3.0"
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@gyldendal/kobber-eslint": "0.4.4",
    "@gyldendal/kobber-stylelint": "0.4.4",
    "@gyldendal/kobber-tsconfig": "0.4.4",
    "@lit/react": "^1.0.7",
    "@shoelace-style/shoelace": "^2.14.0",
    "@types/mocha": "^10.0.10",
    "@types/react": "^19.1.0",
    "@types/stylis": "^4.2.7",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "@web/dev-server-esbuild": "^1.0.4",
    "@web/test-runner": "^0.18.1",
    "@web/test-runner-playwright": "^0.11.0",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-storybook": "^0.11.2",
    "eslint-plugin-unused-imports": "^4.1.4",
    "onchange": "^7.1.0",
    "prettier": "^3.4.2",
    "react": "^19.1.0",
    "stylelint": "^16.0.2",
    "stylelint-config-standard": "^35.0.0",
    "stylelint-order": "^6.0.4",
    "tsup": "^8.4.0",
    "typedoc": "^0.27.6",
    "typedoc-github-wiki-theme": "^2.1.0",
    "typedoc-plugin-markdown": "^4.4.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.15.0"
  },
  "peerDependencies": {
    "@lit/react": ">=1",
    "@shoelace-style/shoelace": ">=2",
    "@web/test-runner-playwright": ">=0.11",
    "react": ">=18"
  },
  "peerDependenciesMeta": {
    "@lit/react": {
      "optional": true
    },
    "@shoelace-style/shoelace": {
      "optional": true
    },
    "@web/test-runner-playwright": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GyldendalDigital/kobber"
  }
}
