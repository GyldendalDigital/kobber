{
  "name": "@gyldendal/kobber-components",
  "version": "0.3.1",
  "license": "MIT",
  "type": "module",
  "files": [
    "chunks/**/*",
    "css/**/*",
    "react/**/*",
    "web-components/**/*"
  ],
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "lint": "yarn lint:js & yarn lint:css",
    "lint:js": "eslint ./src/**/*.{ts,tsx}",
    "lint:css": "stylelint ./src/**/*.css",
    "build": "tsup",
    "prepare": "npm run build",
    "dev": "onchange \"./src/**/*.{ts,tsx,css}\" -- npm run build"
  },
  "dependencies": {
    "@gyldendal/kobber-base": "*",
    "@lit/react": "^1.0.2",
    "@r2wc/react-to-web-component": "^2.0.3",
    "lit": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "stylis": "^4.3.0"
  },
  "devDependencies": {
    "@gyldendal/kobber-eslint": "*",
    "@gyldendal/kobber-stylelint": "*",
    "@types/react": "18.2.0",
    "@types/stylis": "^4.2.4",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-config-turbo": "^1.11.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-storybook": "^0.6.15",
    "onchange": "^7.1.0",
    "stylelint": "^16.0.2",
    "stylelint-order": "^6.0.4",
    "stylelint-config-standard": "^35.0.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GyldendalDigital/kobber"
  }
}
