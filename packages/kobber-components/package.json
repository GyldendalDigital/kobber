{
  "name": "@gyldendal/kobber-components",
  "version": "0.6.10",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist/**/*"
  ],
  "exports": {
    "./react": "./dist/react/index.js",
    "./web-components": "./dist/web-components/index.js",
    "./css/*.css": "./dist/css/*.css",
    "./init": "./dist/init/index.js"
  },
  "scripts": {
    "clean": "rm -rf .turbo node_modules dist",
    "lint": "yarn lint:js && yarn lint:css",
    "lint:css": "stylelint --f verbose \"**/*.css\"",
    "lint:js": "echo \"js lint: run yarn lint from root\"",
    "build": "yarn build:css && tsup",
    "build:css": "tsx ./build-scripts/list-css-components.ts",
    "prepare": "npm run build",
    "dev": "onchange \"./src/**/*.{ts,tsx,css}\" -- npm run build",
    "test": "echo \"No tests configured\"",
    "create-ts-refs": "create-ts-refs --out=.references.mts  sourceMap=react:./src/index.react.js,web-components:./src/index.web-components.js,init:./src/base/init.js"
  },
  "dependencies": {
    "@gyldendal/kobber-base": "0.6.10",
    "@gyldendal/kobber-icons": "0.6.10",
    "@lit-labs/observers": "^2.0.5",
    "@lit-labs/ssr-dom-shim": "^1.3.0",
    "@shoelace-style/localize": "^3.1.2",
    "lit": "^3.2.1",
    "stylis": "^4.3.0"
  },
  "devDependencies": {
    "@gyldendal/kobber-stylelint": "0.6.10",
    "@gyldendal/kobber-tsconfig": "0.6.10",
    "@internal/integration-checker": "workspace:^",
    "@lit/react": "^1.0.7",
    "@shoelace-style/shoelace": "^2.14.0",
    "@types/react": "^19.1.0",
    "@types/stylis": "^4.2.7",
    "onchange": "^7.1.0",
    "react": "^19.1.0",
    "stylelint": "^16.0.2",
    "stylelint-config-standard": "^35.0.0",
    "stylelint-order": "^6.0.4",
    "tsup": "^8.4.0",
    "tsx": "^4.19.2",
    "typedoc": "^0.28.10",
    "typedoc-github-wiki-theme": "^2.1.0",
    "typedoc-plugin-markdown": "^4.8.1",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "@lit/react": ">=1",
    "@shoelace-style/shoelace": ">=2",
    "react": ">=18"
  },
  "peerDependenciesMeta": {
    "@lit/react": {
      "optional": true
    },
    "@shoelace-style/shoelace": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GyldendalDigital/kobber"
  }
}
