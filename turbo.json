{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "clean": { "cache": false },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "test": {},
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "themes/**", "out/**"]
    },
    "tokens": {
      "cache": false
    },
    "css": {
      "cache": false
    },
    "storybook": {
      "cache": false,
      "persistent": true
    },
    "build-storybook-web-components": {
      "dependsOn": ["^build"],
      "outputs": ["storybook-static/**"]
    }
  }
}
